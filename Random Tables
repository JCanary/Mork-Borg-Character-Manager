                {6, "Bow D6 with Presence + 10 arrows"},
                {7, "Flail D8"},
                {8, "Crossbow D8 with Presence + 10 bolts"},
                {9, "Zweihander D10"}
            };

            if (hasScroll)
            {
                return startingWeapon[dice.Next(0, 6)];
            }
            else return startingWeapon[dice.Next(0, 10)];
        }

